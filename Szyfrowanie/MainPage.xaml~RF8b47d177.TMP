<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Szyfrowanie.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    BackgroundColor="#7043d1"
    mc:Ignorable="d">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="6*" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            FontSize="Large"
            HorizontalOptions="Center"
            Text="Kodowanie/Rozkodowanie"
            TextColor="#d9d7de"
            VerticalOptions="Center" />
        <Frame
            Grid.Row="1"
            Padding="5,5,5,5"
            BackgroundColor="#dedce3"
            HorizontalOptions="Center">
            <Entry
                x:Name="entryWprowadzCiagZnakow"
                Placeholder="Wprowadź tekst"
                TextColor="#d9d7de" />
            <Button
                x:Name="btnKoduj"
                BackgroundColor="#3102a6"
                BorderColor="#5c34bf"
                BorderWidth="5"
                Clicked="btnKoduj_Clicked"
                CornerRadius="15"
                Text="Koduj"
                TextColor="#d9d7de" />
            <Button
                x:Name="btnRozkoduj"
                BackgroundColor="#3102a6"
                BorderColor="#5c34bf"
                BorderWidth="5"
                Clicked="btnRozkoduj_Clicked"
                CornerRadius="15"
                Text="Rozkoduj"
                TextColor="#d9d7de" />
        </Frame>
        <Frame
            Grid.Row="2"
            Margin="2,2,2,2"
            Padding="5,5,5,5"
            BackgroundColor="#dedce3">
            <Editor
                x:Name="editKodowanie"
                AutoSize="TextChanges"
                FontSize="12"
                HeightRequest="500"
                TextColor="#d9d7de" />

        </Frame>


    </Grid>

</ContentPage>
